extends layout

block content
  h1= title

  div(class="col-md-4")
    h2 Create tenant

    form(action="/tenants/create", method="post", class="well")
      div(class="form-group")
        label(for="email")
          | Email
        input(type="text", name="email", class="form-control")
      input(type="submit" class="btn btn-default")

  div(class="col-md-6")
    h2 Tenants

    ul
    each tenant in tenants
      li
        strong
          = tenant.email
        | &nbsp;
        a(href="/tenants/" + tenant.id + "/destroy", class="btn btn-xs btn-warning") delete
        ul
          li
            | Create task
            form(action="/tenants/" + tenant.id + "/customers/create", method="post", class="form-inline")
              div(class="form-group")
                input(type="text", name="title", class="input-sm form-control")
                input(type="submit", class="btn btn-sm btn-default")
          each task in tenant.Customers
            li
              strong
                = task.title
              | &nbsp;
              a(href="/tenants/" + tenant.id + "/customers/" + task.id + "/destroy",  class="btn btn-xs btn-warning") delete
