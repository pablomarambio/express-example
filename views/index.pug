extends layout

block content
  h1= titulo

  div(class="col-md-4")
    h2 Crear tenant

    form(action="/tenants/create", method="post", class="well")
      div(class="form-group")
        label(for="email")
          | Email
        input(type="text", name="email", class="form-control")
      input(type="submit" class="btn btn-default")

  div(class="col-md-6")
    h2 Tenants existentes

    ul
    each tenant in tenants
      li
        strong
          = tenant.email + "(" + tenant.id + ")"
        | &nbsp;
        a(href="/tenants/" + tenant.id + "/destroy", class="btn btn-xs btn-warning") borrar
        a(href="/tenant-view/" + tenant.id + "", class="btn btn-xs btn-info") ver
